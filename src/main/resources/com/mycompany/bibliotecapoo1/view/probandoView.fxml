<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.bibliotecapoo1.controller.PrestamosController">
   <children>
      <VBox layoutX="14.0" layoutY="14.0" prefHeight="572.0" prefWidth="872.0" spacing="15.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
         <children>
            <Label text="Gestión de Préstamos">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="872.0" spacing="10.0">
               <children>
                  <Label text="Buscar libro:" />
                  <TextField fx:id="txtBusqueda" prefHeight="25.0" prefWidth="300.0" promptText="Título, autor o ISBN" />
                  <Label text="Categoría:" />
                  <ComboBox fx:id="cmbCategoriaBusqueda" prefWidth="150.0" />
                  <Button fx:id="btnBuscar" mnemonicParsing="false" onAction="#buscarLibro" text="Buscar" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <TableView fx:id="tablaCopiasDisponibles" prefHeight="437.0" prefWidth="872.0">
              <columns>
                <TableColumn fx:id="colCopiaId" prefWidth="75.0" text="ID Copia" />
                <TableColumn fx:id="colTitulo" prefWidth="180.0" text="Título" />
                  <TableColumn fx:id="colAutor" prefWidth="150.0" text="Autor" />
                  <TableColumn fx:id="colCategoria" prefWidth="100.0" text="Categoría" />
                  <TableColumn fx:id="colTipo" prefWidth="100.0" text="Tipo" />
                  <TableColumn fx:id="colRack" prefWidth="100.0" text="Rack" />
                  <TableColumn fx:id="colEstado" prefWidth="80.0" text="Estado" />
              </columns>
            </TableView>
            <HBox alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="872.0" spacing="10.0">
               <children>
                  <Button fx:id="btnPedirPrestamo" mnemonicParsing="false" onAction="#pedirPrestamo" text="Pedir Préstamo" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
